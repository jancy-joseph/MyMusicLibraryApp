<Page
    x:Class="MyMusic.MyMusicCollection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <Popup>
            <Grid Background="#FFE5E5E5"/>
        </Popup>
        <Button x:Name="Pause" Content="Pause" HorizontalAlignment="Left" Height="66" Margin="686,611,0,0" VerticalAlignment="Top" Width="133" Click="Pause_Click"/>
        <ListView x:Name="MyViewlist"  HorizontalAlignment="Left" Height="300" Margin="283,276,0,0" VerticalAlignment="Top" Width="536"  SelectionMode="Multiple" SelectionChanged="MyViewlist_SelectionChanged">
            <ListView.ItemTemplate >
                <DataTemplate >
                    <Grid >
                        <TextBlock Text="{Binding MFileName}"  ></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView>
        <Button x:Name="PickFileToMusicCollection" Content="MusicFileCollection" HorizontalAlignment="Left" Margin="283,611,0,0" VerticalAlignment="Top" Width="302" Height="66" Click="PickFileToMusicCollection_Click" RenderTransformOrigin="0.535,-1.496"/>
        <TextBox x:Name="TxtUSER" HorizontalAlignment="Left" Margin="283,54,0,0" Text="TextBox" VerticalAlignment="Top" Height="94" RenderTransformOrigin="0.5,0.5" Width="536"/>
        <Button x:Name ="CreatePlaylist" Content="Create Playlist" HorizontalAlignment="Left" Margin="283,730,0,0" VerticalAlignment="Top" Height="80" Width="302" Click="CreatePlaylist_Click"/>
        <Popup x:Name="popup"  Width="200" Height="100" Margin="0,20,0,0">
            <Border BorderBrush="Black" BorderThickness="2" Background="AliceBlue">
                <TextBox x:Name="txtBox" VerticalAlignment="Center" Margin="15,0,15,0"/>
            </Border>
        </Popup>

    </Grid>
</Page>
