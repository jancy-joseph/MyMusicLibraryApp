<Page
    x:Class="MyMusic.MyMusicCollection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
   

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height=" 100"/>
        </Grid.RowDefinitions>
        <GridView ItemsSource="{x:Bind MUSICFILES}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="MUSICFILE">
                    <Image Width="150" />
                    TextBlock FontSize ="16"/>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

                <TextBlock Grid.Row="1" Name="ResultTextBlock" FontSize="24" Foregorund ="Red" FontWeight="Bold" Margin="0,20,0,0"/>
                <Button  Name ="Back" Content="Back" HorizontalAlignment="Left" Height="73" Margin="10,10,0,0" VerticalAlignment="Top" Width="156" RenderTransformOrigin="0.248,-4.992"/>

    </Grid>
</Page>
